            <kind>1</kind>
            <string>time += 1;

if (paused == false) {
    if (instance_number(covenant_par) == 0) {
    
        wave_index += 1;   

        show_debug_message("Spawning new wave. Wave Index: " + string(wave_index));
        
        var wave_index_spawn = min(wave_index, ds_list_size(waves))
        
        wave = waves[| wave_index_spawn - 1];
        
        var squadList = wave[? "squads"]        
        var squadNum = ds_list_size(squadList)
        
        show_debug_message("Squads in wave: " + string(squadNum));
        
        for (i = 0; i &lt; squadNum; i++) {
        
            show_debug_message("Spawning Squad: " + string(i));
        
            squad = squadList[| i];        
        
            // find a location outside of player's view to spawn the squad
            var squadX, squadY;
            var squadSpawnSafe = false;
            
            while (squadSpawnSafe == false) {
                squadX = random(room_width);
                squadY = random(room_height);  
                
                if (point_distance(player.x, player.y, squadX, squadY) &gt; 400) {
                    if (!collision_circle(squadX, squadY, 100, character_par_obj, false, false)) {
                        squadSpawnSafe = true;
                    }
                }            
            }
            
            show_debug_message("Squad Spawn Coordinates: x=" + string(squadX) + ", y=" + string(squadY));        
            
            // spawn each entity within the squad
            for (j = 0; j &lt; ds_list_size(squad); j++) {
            
                show_debug_message("Spawning Entity in Squad: " + string(j))
                
                var squadRadius = 80;
                var spawnX, spawnY;
                var safeSpawn = false;
                var spawnAttempts = 0;
                
                // find a non-colliding spawn location within the squad
                while (safeSpawn == false) {            
                    spawnX = squadX + random(squadRadius) - squadRadius / 2;
                    spawnY = squadY + random(squadRadius) - squadRadius / 2;                
                    if (!collision_point(spawnX, spawnY, character_par_obj, false, false)) {
                        safeSpawn = true;
                    }
                    spawnAttempts += 1;
                    if (spawnAttempts &gt; 50) {
                        break;
                    }     
                }
                
                instance_create(spawnX, spawnY, squad[| j]);
            }
        }
    }
}

